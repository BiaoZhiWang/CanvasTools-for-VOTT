{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "include": ["src/**/*.ts"],
        "exclude": ["**/*.d.ts"]
    },
    "jsRules": {},
    "rules": {
        "max-line-length": {
            "options": [120]
        },
        "interface-name": false,
        "object-literal-sort-keys": false,
        "no-shadowed-variable": false,
        "no-string-literal": false,
        "unified-signatures": false,
        "jsdoc-format": true
    },
    "rulesDirectory": []
}